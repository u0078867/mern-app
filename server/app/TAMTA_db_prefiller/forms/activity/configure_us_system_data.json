{
  "name": "Configure ultrasonography system",
  "type": "configure-us",
  "researchers": [
    {
      "id": {
        "select": "_;items[0].cuid",
        "query": "search-api;researchers;{{actor}}",
        "__replacer__": true
      }
    }
  ],
  "devices": [
    {
      "id": {
        "select": "_;items[0].cuid",
        "query": "search-api;devices;{{us_probe}}",
        "__replacer__": true
      },
      "roles": ["us_probe"]
    },
    {
      "id": {
        "select": "_;items[0].cuid",
        "query": "search-api;devices;{{us_machine}}",
        "__replacer__": true
      },
      "roles": ["us_machine"]
    },
    {
      "id": {
        "select": "_;items[0].cuid",
        "query": "search-api;devices;{{us_portico}}",
        "__replacer__": true
      },
      "roles": ["us_portico"]
    },
    {
      "id": {
        "select": "_;items[0].cuid",
        "query": "search-api;devices;{{us_acq_computer}}",
        "__replacer__": true
      },
      "roles": ["us_acq_computer"]
    }
  ],
  "software": [
    {
      "id": {
        "select": "_;items[0].cuid",
        "query": "search-api;swtools;{{us_acq_software}}",
        "__replacer__": true
      },
      "roles": ["us_acq_software"]
    }
  ],
  "outputs": [
    {
      "name": "image_h",
      "data": [
        {
          "name": "value",
          "uom": {
            "default": "px",
            "valueFromVar": "us_acq_software_image_h_uom",
            "__replacer__": true
          },
          "value": {
            "valueFromVar": "us_acq_software_image_h_value",
            "__replacer__": true
          }
        }
      ]
    },
    {
      "name": "image_w",
      "data": [
        {
          "name": "value",
          "uom": {
            "default": "px",
            "valueFromVar": "us_acq_software_image_w_uom",
            "__replacer__": true
          },
          "value": {
            "valueFromVar": "us_acq_software_image_w_value",
            "__replacer__": true
          }
        }
      ]
    },
    {
      "name": "speckle_reduction_enabled",
      "data": [
        {
          "name": "value",
          "value": {
            "valueFromVar": "us_acq_software_speckle_reduction_enabled_value",
            "__replacer__": true
          }
        }
      ]
    },
    {
      "name": "dynamic_range_enabled",
      "data": [
        {
          "name": "value",
          "value": {
            "valueFromVar": "us_acq_software_dynamic_range_enabled_value",
            "__replacer__": true
          }
        }
      ]
    },
    {
      "name": "lines_density",
      "data": [
        {
          "name": "value",
          "value": {
            "valueFromVar": "us_acq_software_lines_density",
            "__replacer__": true
          }
        }
      ]
    },
    {
      "name": "free_text_comment",
      "data": [
        {
          "name": "value",
          "value": {
            "valueFromVar": "us_acq_software_comment_value",
            "__replacer__": true
          }
        }
      ]
    }
  ]
}
